package main

import (
	"encoding/json"
	"fmt"
	"github.com/aws/aws-lambda-go/events"
	"github.com/aws/aws-lambda-go/lambda"
	"github.com/aws/aws-sdk-go/aws"
	"github.com/aws/aws-sdk-go/aws/session"
	"github.com/aws/aws-sdk-go/service/dynamodb"
	"github.com/aws/aws-sdk-go/service/dynamodb/dynamodbattribute"
	"os"
)

type Excursion struct {
	PK 			string `json:"pk"`
	SK 			string `json:"sk"`
	GSI1PK 		string `json:"gsi1pk"`
	GSI1SK 		string `json:"gsi1sk"`
	Country 	string `json:"country"`
	Description string `json:"description"`
	Town 		string `json:"town"`
	ExcursionID string `json:"excursionID"`
}

func Post(body string) (Excursion, error) {
	sess := session.Must(session.NewSession())
	ddb := dynamodb.New(sess)

	var thisExcursion Excursion
	json.Unmarshal([]byte(body), &thisExcursion)

	fmt.Println("Excursion to add: ", thisExcursion )

	av, err := dynamodbattribute.MarshalMap(thisExcursion)
	if err != nil {
		fmt.Println("Got error marshaling map: ")
		fmt.Println(err.Error())
		return thisExcursion, err
	}

	input := &dynamodb.PutItemInput{
		Item:      av,
		TableName: aws.String(os.Getenv("Excursions")),
	}
	_, err = ddb.PutItem(input)
	return thisExcursion, err
}

func Handler(request events.APIGatewayProxyRequest)(events.APIGatewayProxyResponse, error) {
	fmt.Println("Received body: ", request.Body)

	excursion, err := Post(request.Body)

	if err != nil {
		fmt.Println("Got error calling post")
		fmt.Println(err.Error())
		return events.APIGatewayProxyResponse{Body: "Error", StatusCode: 500}, nil
	}

	fmt.Println("Created excursion: ", excursion)
	return events.APIGatewayProxyResponse{Body: "Success\n", StatusCode: 200}, nil
}

func main()  {
	lambda.Start(Handler)
}

